<body style="background-color: #999999;">
    
    <div class="limiter">
        <div class="container-login100">
            <div class="login100-more" style="background-image: url('images/mail.jpg');"></div>

            <div class="wrap-login100 p-l-50 p-r-50 p-t-50 p-b-50">
                Create new template
	           	<div> 
	           		<%= form_for @mail, :as => :vmail, :url => "/mails" do |f| %>
                      Subject: <%= f.text_field :subject %><br />
                      Body : <%= f.text_field :body %><br />
                      <%= f.submit %>
                    <% end %>
	           	</div>

            </div>
        </div>
    </div>
</div>
