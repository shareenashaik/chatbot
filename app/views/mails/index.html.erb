<body style="background-color: #999999;">
    
    <div class="limiter">
        <div class="container-login100">
            <div class="login100-more" style="background-image: url('images/mail.jpg');"></div>

            <div class="wrap-login100 p-l-50 p-r-50 p-t-50 p-b-50">
            	<ul class="mail_items">
            	<%if @mails.present?%>
	                <%@mails.each do |mail|%>
	                	<li> 
	                		<i class="fa fa-long-arrow-right m-l-5"></i>
	                		<%= mail.subject%>
	                	</li>
	                <%end%>
	            <%else%>
	            	No Templates..
	           	<%end%>
            		
            	</ul>

	           	<div style="margin-top: 100px;"> 
	           		<input type="button" class="btn" value="Create new" onclick="window.location.href='http://localhost:3000/vmail_create'">
	           	</div>

            </div>
        </div>
    </div>
</div>
</body>
</html>

